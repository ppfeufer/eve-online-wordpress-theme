# Text formatting
TEXT_BOLD := $(shell printf "\033[1m")
TEXT_BOLD_END := $(shell printf "\033[22m")
TEXT_ITALIC := $(shell printf "\033[3m")
TEXT_ITALIC_END := $(shell printf "\033[23m")
TEXT_UNDERLINE := $(shell printf "\033[4m")
TEXT_UNDERLINE_END := $(shell printf "\033[24m")

TEXT_COLOR_GREEN := $(shell printf "\033[0;32m")
TEXT_COLOR_GREEN_END := $(shell printf "\033[0;39m")
TEXT_COLOR_RED := $(shell printf "\033[0;31m")
TEXT_COLOR_RED_END := $(shell printf "\033[0;39m")
TEXT_COLOR_BLUE := $(shell printf "\033[0;34m")
TEXT_COLOR_BLUE_END := $(shell printf "\033[0;39m")
TEXT_COLOR_YELLOW := $(shell printf "\033[0;33m")
TEXT_COLOR_YELLOW_END := $(shell printf "\033[0;39m")
TEXT_COLOR_PURPLE := $(shell printf "\033[0;35m")
TEXT_COLOR_PURPLE_END := $(shell printf "\033[0;39m")
TEXT_COLOR_CYAN := $(shell printf "\033[0;36m")
TEXT_COLOR_CYAN_END := $(shell printf "\033[0;39m")
TEXT_COLOR_GREY := $(shell printf "\033[0;37m")
TEXT_COLOR_GREY_END := $(shell printf "\033[0;39m")

TEXT_RESET := $(shell printf "\033[0m")
